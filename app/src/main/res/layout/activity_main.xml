<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/title"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardInsertGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:minHeight="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/ptFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:autofillHints="Hilversum"
                android:ems="10"
                android:hint="@string/fromHint"
                android:inputType="textPersonName"
                android:text="Amsterdam Sloterdijk"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ptTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints="Utrecht Centraal"
                android:ems="10"
                android:hint="@string/toHint"
                android:inputType="textPersonName"
                android:text="Hilversum"
                app:layout_constraintEnd_toEndOf="@+id/ptFrom"
                app:layout_constraintStart_toStartOf="@+id/ptFrom"
                app:layout_constraintTop_toBottomOf="@+id/ptFrom" />


            <EditText
                android:id="@+id/ptHours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Hour"
                android:inputType="time"
                android:maxLength="2"
                app:layout_constraintEnd_toEndOf="@+id/ptDay"
                app:layout_constraintStart_toStartOf="@+id/ptDay"
                app:layout_constraintTop_toBottomOf="@+id/ptYear" />

            <EditText
                android:id="@+id/ptMinutes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Minute"
                android:inputType="time"
                android:maxLength="2"
                app:layout_constraintEnd_toEndOf="@+id/ptMonth"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ptMonth"
                app:layout_constraintTop_toBottomOf="@+id/ptYear" />

            <Spinner
                android:id="@+id/spType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ptTo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ptTo"
                app:layout_constraintTop_toBottomOf="@+id/ptMinutes" />

            <EditText
                android:id="@+id/ptDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Day"
                android:inputType="date"
                android:maxLength="2"
                app:layout_constraintStart_toStartOf="@+id/ptTo"
                app:layout_constraintTop_toBottomOf="@+id/ptTo" />

            <EditText
                android:id="@+id/ptMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:hint="Month"
                android:inputType="date"
                android:maxLength="2"
                app:layout_constraintStart_toEndOf="@+id/ptDay"
                app:layout_constraintTop_toBottomOf="@+id/ptTo" />

            <EditText
                android:id="@+id/ptYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:hint="Year"
                android:inputType="date"
                android:maxLength="4"
                app:layout_constraintEnd_toEndOf="@+id/ptTo"
                app:layout_constraintStart_toEndOf="@+id/ptMonth"
                app:layout_constraintTop_toBottomOf="@+id/ptTo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="36sp"
                app:layout_constraintBottom_toTopOf="@+id/spType"
                app:layout_constraintEnd_toStartOf="@+id/ptMinutes"
                app:layout_constraintStart_toEndOf="@+id/ptHours"
                app:layout_constraintTop_toBottomOf="@+id/ptMonth" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/lightBlue"
        android:text="@android:string/search_go"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/cardInsertGame"
        app:layout_constraintStart_toStartOf="@+id/cardInsertGame"
        app:layout_constraintTop_toBottomOf="@+id/cardInsertGame" />



</androidx.constraintlayout.widget.ConstraintLayout>


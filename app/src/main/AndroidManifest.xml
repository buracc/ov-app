<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="dev.burak.ovapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:name="dev.burak.ovapp.OvApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="dev.burak.ovapp.ui.search.trip.TripActivity"
                android:label="Trip"/>
        <activity
                android:name="dev.burak.ovapp.ui.favourites.FavouritesActivity"
                android:label="Favourites" tools:ignore="Instantiatable"/>
        <activity
                android:name="dev.burak.ovapp.ui.search.SearchActivity"
                android:label="Trip Search"/>
        <activity android:name="dev.burak.ovapp.ui.main.MainActivity" tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
